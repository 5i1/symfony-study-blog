{% extends 'admin.html.twig' %}

{% block body %}
    <section class="content-header">
        <h1>
            All media
            <small>preview of folders</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Media</li>
        </ol>
    </section>

    <section class="content content-media-index">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <div class="box-tools">
                            <form class="form-inline">
                                <div class="input-group input-group-sm" style="width: 150px;">
                                    <input type="text" name="q" class="form-control pull-right" placeholder="Search">

                                    <div class="input-group-btn">
                                        <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- /.box-header -->

                    <div class="box-body">
                        {% if 0 < folders|length %}
                            <div class="media-index-content">
                                <h4 class="box-title">Folders</h4>
                                <div class="row">
                                    {% for folder in folders %}
                                        <div class="col-xs-6 col-md-2">
                                            <a href="{{ path('admin_media_index', {folder: folder.id}) }}" class="btn btn-app media-index-btn-folder">
                                                <!--span class="badge bg-yellow">3</span-->
                                                <i class="fa fa-folder"></i> {{ folder.name }}
                                            </a>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endif %}

                        {% if 0 < medias|length %}
                            <div class="media-index-content">
                                <h4 class="box-title">Files</h4>
                                <div class="row">
                                    {% for media in medias %}
                                        <div class="col-xs-12 col-md-3">
                                            <div class="thumbnail">
                                                <img src="{{ media.file }}"
                                                     alt="{{ media.title }}"
                                                     class="img-responsive">
                                                <div class="caption">
                                                    <h4>{{ media.title }}</h4>
                                                    <p>
                                                        <a href="#" class="btn btn-xs btn-default" role="button"><i class="fa fa-edit"></i> Edit</a>
                                                        <a href="#" class="btn btn-xs btn-danger" role="button"><i class="fa fa-trash"></i> Delete</a>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endif %}
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>
    </section>
{% endblock %}